<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Owners>christianacca</Owners>
    <Authors>Christian Crowhurst</Authors>
    <Description>Application Insights Log4Net Appender is a customer appender allowing you to send Log4Net log messages to Application Insights.

This is a fork of 'Microsoft.ApplicationInsights.Log4NetAppender' adding the following extras:

Support sending CustomEvent telemetry items</Description>
    <Version>1.0.5</Version>
    <PackageTags>ApplicationInsights Analytics Telemetry</PackageTags>
    <RepositoryUrl>https://github.com/christianacca/AppInsights.Log4NetAppender</RepositoryUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/christianacca/AppInsights.Log4NetAppender/master/LICENSE</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CcAcca.LogEvents" Version="1.2.2" />
    <PackageReference Include="log4net" Version="2.0.8" />
    <PackageReference Include="Microsoft.ApplicationInsights" Version="2.7.2" />
  </ItemGroup>

</Project>
